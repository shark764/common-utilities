{
  "name": "@dfhernandez/common-utilities",
  "version": "0.0.0",
  "description": "Library written in JS that contains all useful functions and setups",
  "author": "Daniel Hernandez <farid.hdz.64@gmail.com> (https://github.com/shark764)",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "source": "src/index",
  "files": [
    "bin",
    "build",
    "tools",
    "lib",
    "tsconfig.base.json",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "yarn clean && tsc -p tsconfig.build.json",
    "pre-commit": "lint-staged && yarn test",
    "prepare": "husky install",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json)\"",
    "prettify": "yarn run format && yarn run lint:fix",
    "full-check": "yarn run prettify && yarn run typescript",
    "release": "release-it",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "jest:clr": "jest --clearCache"
  },
  "dependencies": {
    "date-fns": "^2.29.1",
    "date-fns-tz": "^1.3.6"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.182",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "commitlint": "^11.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.0",
    "jest": "^28.1.3",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "release-it": "^14.2.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "utilities"
  ],
  "license": "MIT",
  "homepage": "https://github.com/shark764/common-utilities#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shark764/common-utilities.git"
  },
  "bugs": {
    "url": "https://github.com/shark764/common-utilities/issues"
  }
}
