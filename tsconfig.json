{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": false,
    "noEmit": false,
    "outDir": "lib",
    "paths": {
      "@dfhernandez/common-utilities": ["./src/index"]
    },
    "types": ["node", "jest"]
  },
  "exclude": [
    "**/*.test.*",
    "**/__mocks__/*",
    "**/__tests__/*",
    "__tests__/**/*-test.ts",
    "tests",
    "dist",
    "node_modules",
    "build",
    "lib",
    "coverage",
    ".eslintrc.js",
    "babel.config.js",
    "commitlint.config.js",
    "jest.config.ts",
    "lint-staged.config.js",
    "webpack.config.js"
  ],
  "include": ["**/*.js", "**/*.ts", "./*", "./**/*", "./src", "src/**/*.json"],
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ]
}
